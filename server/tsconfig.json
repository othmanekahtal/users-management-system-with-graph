{
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "sourceMap": true,

    "lib": ["esnext"],
    "moduleResolution": "Node",
    "incremental": true,
    "outDir": "dist",
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src" /* Specify the base directory to resolve non-relative module names. */,
    "paths": {
      "@utils/*": ["utils/*"],
      "@interfaces/*": ["interfaces/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@models/*": ["models/*"],
      "@controllers/*": ["controllers/*"],
      "@schemas/*": ["schemas/*"],
      "@entities/*": ["entities/*"],
      "@dto/*": ["dto/*"]
    }
  }
}
